<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/layout_parameters"
    android:layout_margin="30dp"
    android:background="#62def8">

    <TextView
        android:id="@+id/info_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:text="Configure the parameters"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/interval_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_textview"
        android:layout_marginTop="7dp"
        android:text="Time interval between readings: " />

    <SeekBar
        android:id="@+id/seekBar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/interval_textview"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp"
        android:max="10"
        android:min="1"
        android:progress="1" />

    <TextView
        android:id="@+id/number_readings_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBar1"
        android:text="Number of readings: " />

    <SeekBar
        android:id="@+id/seekBar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/number_readings_textview"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:max="4"
        android:min="1"
        android:progress="1" />

</RelativeLayout>